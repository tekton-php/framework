{
    "name": "tekton/framework",
    "license": "MIT",
    "description": "Tekton is a lightweight PHP micro-framework, designed to integrate as a shim in older codebases to enable modern design patterns",
    "homepage": "https://github.com/tekton-php/framework",
    "autoload": {
        "psr-4": {
            "Tekton\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "require": {
        "php": ">=7.0.0",
        "tekton/support": ">=2.0.0",
        "symfony/dotenv": "^4.1",
        "psr/container": "^1.0"
    }
}
